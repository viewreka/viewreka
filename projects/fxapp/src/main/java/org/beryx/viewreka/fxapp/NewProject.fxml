<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.input.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?scenebuilder-stylesheet ../../../../../resources/viewreka.css?>

<fx:root minWidth="404.0" prefHeight="480.0" prefWidth="800.0" type="BorderPane" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1">
  <top>
    <BorderPane>
         <left>
            <Label fx:id="lbNewProjectHeaderText" text="Create a Viewreka Project" BorderPane.alignment="CENTER" />
         </left>
         <right>
            <Label fx:id="lbNewProjectHeaderIcon" prefHeight="48" prefWidth="48" BorderPane.alignment="CENTER" />
         </right>
    </BorderPane>
  </top>
  <center>
      <VBox maxHeight="1.7976931348623157E308">
         <BorderPane.margin>
            <Insets bottom="20.0" top="20.0" />
         </BorderPane.margin>
         <children>
            <Separator VBox.vgrow="NEVER" />
            <GridPane hgap="5.0" vgap="5.0" VBox.vgrow="NEVER">
               <children>
                  <Label text="Project name:" />
                  <TextField fx:id="txtNewProjectName" GridPane.columnIndex="1" GridPane.columnSpan="2" />
                  <Label text="Project home:" GridPane.rowIndex="1" />
                  <TextField fx:id="txtNewProjectDir" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <Button fx:id="butNewProjectDir" maxWidth="120.0" minWidth="120.0" mnemonicParsing="false" onAction="#chooseProjectDir" prefWidth="120.0" text="Directory..." GridPane.columnIndex="2" GridPane.rowIndex="1" />
               </children>
               <columnConstraints>
                  <ColumnConstraints />
                  <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints minWidth="120.0" prefWidth="120.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints />
                  <RowConstraints />
               </rowConstraints>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </GridPane>

            <Label text="Project libraries:" GridPane.rowIndex="2" VBox.vgrow="NEVER">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin></Label>

            <GridPane hgap="5.0" maxHeight="1.7976931348623157E308" VBox.vgrow="ALWAYS">
               <children>
                  <ListView fx:id="lstLib" maxHeight="1.7976931348623157E308" GridPane.hgrow="ALWAYS" GridPane.rowSpan="4" GridPane.vgrow="ALWAYS" />
                  <Button fx:id="butLibAdd" alignment="CENTER" maxWidth="120.0" minWidth="120.0" mnemonicParsing="false" onAction="#addLibs" prefWidth="120.0" text="Add library..." GridPane.columnIndex="1" />
                  <Button fx:id="butLibRemove" alignment="CENTER" maxWidth="129.0" minWidth="120.0" mnemonicParsing="false" onAction="#removeLibs" prefWidth="120.0" text="Remove" GridPane.columnIndex="1" GridPane.rowIndex="1" />
               </children>
               <columnConstraints>
                  <ColumnConstraints />
                  <ColumnConstraints minWidth="120.0" prefWidth="120.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="30.0" prefHeight="30.0" />
                  <RowConstraints minHeight="30.0" prefHeight="30.0" />
                  <RowConstraints maxHeight="1.7976931348623157E308" minHeight="0.0" vgrow="ALWAYS" />
                  <RowConstraints />
               </rowConstraints>
            </GridPane>

            <Separator VBox.vgrow="NEVER">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin></Separator>

         </children>
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
      </VBox>
  </center>
  <bottom>
    <FlowPane alignment="CENTER_RIGHT" columnHalignment="RIGHT" hgap="20.0" prefWidth="-1">
      <children>
        <Button fx:id="butNewProjectOk" alignment="CENTER" defaultButton="true" mnemonicParsing="false" onAction="#createProject" prefWidth="90.0" text="OK" />
        <Button fx:id="butNewProjectCancel" alignment="CENTER" cancelButton="true" mnemonicParsing="false" onAction="#cancelProject" prefWidth="90.0" text="Cancel" />
      </children>
    </FlowPane>
  </bottom>
   <padding>
      <Insets bottom="10.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</fx:root>
